<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/excellent_bank"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/excellent_bank_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ExcelentBank"
        tools:targetApi="31">

        <!-- Loading Screen -->
        <activity android:name=".LoadingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".LoginActivity"
            android:exported="true"
            tools:ignore="IntentFilterExportedReceiver">
        </activity>

        <!-- Main Activity -->
        <activity android:name=".MainActivity"
            android:exported="true">
        </activity>

        <!-- Transfer Activity -->
        <activity android:name=".TransferActivity"
            android:exported="true">
        </activity>

        <!-- Transfer Loading -->
        <activity android:name=".TransferLoadActivity"
            android:exported="true">
        </activity>

        <!-- Transfer Success -->
        <activity android:name=".TransferSuccessActivity"
            android:exported="true">
        </activity>

    </application>

</manifest>